---
import { AUTHOR_NAME } from "../consts";

const today = new Date();
---

<footer>
  <div class="links">
    <!-- github -->
    <a class="link link--monospace link--glowing" href="https://www.github.com/lumirth" target="_blank" rel="noopener noreferrer">
      GITHB
    </a>
    <!-- linkedin -->
    •
    <a class="link link--monospace link--glowing" href="https://www.linkedin.com/in/lumirth" target="_blank" rel="noopener noreferrer">
      LKDIN
    </a>
