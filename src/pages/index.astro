---
import Card from '../components/Card.astro';
import Main from '../components/Main.astro';
import {Content as Index} from '../components/pages/index.md';
import LatestBlogPost from '../components/LatestBlogPost.astro';
import LatestProject from '../components/LatestProject.astro';
import { SLASH } from '../consts';
---

<meta charset="utf-8" />
<!DOCTYPE html>
<html lang="en">
	<Main page_title={SLASH}>
		<div class="container">
			<div class="main-content">
				<Index />
			</div>
			<!-- <hr class="hori-line"/> -->
			<div class="right-column">
				<div style="margin-left:auto; margin-right:auto; max-width:600px;">	
					<p style="line-height:1; max-width:600px;">Latest blog post:</p>
				</div>
				<LatestBlogPost />
				<div style="margin-left:auto; margin-right:auto; max-width:600px;">	
					<p style="line-height:1;">Latest project:</p>
				</div>
				<LatestProject />
			</div>
		</div>
	</Main>
</html>

<style>
.container {
	margin: 0;
	padding: 0;
	display: flex;
	flex-direction: column; /* Stack the content vertically on mobile */
}

.main-content {
}

.right-column {
	padding-top: 0.5rem; /* Add some padding around the content */
	margin-bottom: -1rem;
	padding-bottom: 2rem;
}


/* Media query for desktop devices */
@media (min-width: 768px) {
	.container {
		flex-direction: row; /* Display content side by side on desktop */
	}

	.main-content {
		flex: 1; /* Take up the remaining space in the container */
		padding: 0;
	}

	.right-column {
		width: 300px; /* Set a fixed width for the right column */
		padding: 0;
		padding-left: 2rem;
	}
}
</style>
